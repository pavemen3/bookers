<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div class="field">
  <%= f.label :book_title, "Title" %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :book_body, "Body" %>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<%= link_to "Show", show_book_path(@book.id) %>
 |
<%= link_to "Back", books_path %>

